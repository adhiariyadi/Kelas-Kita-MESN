<div class="card">
    <div class="card-header">
      <h4>Edit Jadwal Pelajaran</h4>
    </div>
    <form action="/admin/picket?_method=PUT" method="POST">
      <div class="card-body">
        <div class="form-group">
          <label for="dayId">Hari</label>
          <select class="form-control select2" id="dayId" name="dayId">
            <option disabled>--- Pilih Hari ---</option>
            <% day.forEach(data => { %>
            <option value="<%= data.id %>"
              <% if (picket.dayId._id == data.id) { %>
                selected
              <% } %>
              ><%= data.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="studentId">Siswa</label>
          <select class="form-control select2" id="studentId" name="studentId">
            <option disabled>--- Pilih Siswa ---</option>
            <% student.forEach(data => { %>
            <option value="<%= data.id %>"
              <% if (picket.studentId._id == data.id) { %>
                selected
              <% } %>
              ><%= data.name %></option>
            <% }) %>
          </select>
        </div>
        <input type="hidden" name="id" value="<%= picket.id %>">
      </div>
      <div class="card-footer">
        <a href="/admin/picket" class="btn btn-secondary mr-2">Back</a>
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>